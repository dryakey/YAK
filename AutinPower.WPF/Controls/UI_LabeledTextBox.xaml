<UserControl x:Class="AutinPower.WPF.Controls.UI_LabeledTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutinPower.WPF.Controls"
             mc:Ignorable="d" 
             Height="28.389" Width="185.5">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="80"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="labelTitle" Content="fsa" HorizontalContentAlignment="Right" Margin="5,0,0,0" FontFamily="Arial"/>
        <TextBox x:Name="textboxValue"  Height="23" TextWrapping="Wrap" Text="{Binding Value}" VerticalAlignment="Top" Margin="2,3,5,0" Grid.Column="1"/>
    </Grid>
</UserControl>
